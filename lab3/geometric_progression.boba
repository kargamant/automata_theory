big geomProg small q big a small n 
begin
	check n<0 do return -1,.
	big summ<<a,
	tiny condition<<0,

	until condition do
		a<<(a*q),
		summ<<(summ+a),
		n<<(-1+n),
		check n<=0 do condition<<1,
	.
	.
	return summ,.

end,

small qArg<<3,
big aArg<<1,
small nArg<<3,
@geomProg(qArg aArg nArg),
big G<<geomProg(4 1 4),
big H<<geomProg(2 1 4),
@G,
@H,
@geomProg(10 1 3),
.
